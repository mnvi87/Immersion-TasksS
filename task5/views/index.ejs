<!DOCTYPE html>
<html>
<head>
    <title>Vehicle Manager</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }
        .vehicle-card {
            border: 1px solid #ccc;
            padding: 15px;
            margin-bottom: 15px;
            border-radius: 10px;
            list-style: none;
        }
        img {
            width: 200px;
            height: 150px;
        }
        .actions {
            margin-top: 10px;
        }
        .actions form {
            display: inline;
        }
    </style>
</head>
<body>

    <h1>Vehicle List</h1>

    <ul>
        <% vehicles.forEach(vehicle => { %>
            <li class="vehicle-card">
                <strong>Name:</strong> <%= vehicle.vehicleName %><br>
                <strong>Price:</strong> ‚Çπ<%= vehicle.price %><br>
                <strong>Image:</strong><br> 
                <img src="<%= vehicle.image %>" alt="Vehicle Image"><br>
                <strong>Description:</strong> <%= vehicle.desc %><br>
                <strong>Brand:</strong> <%= vehicle.brand %><br>

                <div class="actions">
                    <a href="/edit/<%= vehicle.id %>">‚úèÔ∏è Edit</a>
                    <form action="/delete/<%= vehicle.id %>" method="POST">
                        <button type="submit">üóëÔ∏è Delete</button>
                    </form>
                </div>
            </li>
        <% }) %>
    </ul>

    <h2>Add New Vehicle</h2>
    <form action="/add" method="POST">
        <input type="text" name="vehicleName" placeholder="Vehicle Name" required><br />
        <input type="text" name="price" placeholder="Price" required><br />
        <input type="text" name="image" placeholder="Image URL" required><br />
        <input type="text" name="desc" placeholder="Description" required><br />
        <input type="text" name="brand" placeholder="Brand" required><br />
        <button type="submit">Add Vehicle</button>
    </form>

</body>
</html>
